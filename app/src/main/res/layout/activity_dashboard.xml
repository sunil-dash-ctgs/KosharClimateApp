<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cropintellix.DashboardActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dashboard_bg">

        </ImageView>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kosher_climate"
                android:padding="45dp">
            </ImageView>

        </LinearLayout>



        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_person">
        </ImageView>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/profile"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/weather_notifications" />

            <TextView
                android:id="@+id/counterTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="top|end"
                android:background="@drawable/orange_bg"
                android:padding="4dp"
                android:text="0"
                android:visibility="gone"
                android:textColor="@android:color/white" />

        </FrameLayout>
        

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </TextView>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearlayoutxxxxxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/module_select"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold">

        </TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearlayoutxxxxxx">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/farmer"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/farmer_onboarding"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/farmer_survey">
                        </ImageView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/crop"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/crop_data"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/crop_survey">
                        </ImageView>


                    </RelativeLayout>


                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/ivPipe2"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/pipe_installation"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/seed_survey">
                        </ImageView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ivPipe1"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/polygon"
                            android:textColor="@color/black">
                        </TextView>

                        <com.github.siyamed.shapeimageview.HexagonImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="45dp"
                            android:layout_marginBottom="0dp"
                            android:padding="5dp"
                            android:src="@drawable/polygon">
                        </com.github.siyamed.shapeimageview.HexagonImageView>


                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/aeration"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/capture_aeration_event"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/trader_survey">
                        </ImageView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/farmer_benefit"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="0.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/farmer_benefits_dashboard"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/input_survey">
                        </ImageView>


                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/reports"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/reports"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/reports">
                        </ImageView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/weather"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Weather"
                            android:textColor="@color/black">
                        </TextView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/weather_img"
                                android:layout_width="wrap_content"
                                android:layout_height="90dp"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/degrees"
                                android:padding="5dp">
                            </ImageView>


                            <LinearLayout
                                android:id="@+id/degrees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:gravity="center_vertical"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/current_temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal"
                                    android:textSize="27sp"
                                    android:paddingHorizontal="10dp"
                                    android:text="XX"
                                    android:textColor="@color/black">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal"
                                    android:textSize="23sp"
                                    android:paddingHorizontal="10dp"
                                    android:text="Â°C"
                                    android:textColor="@color/black">
                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>




                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

<!--            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/addPlots"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/card_bg"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/add_more"
                            android:textColor="@color/black">
                        </TextView>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:src="@drawable/add_icon">
                        </ImageView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:layout_weight="1">

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/version_number">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/powered"
                android:layout_marginBottom="10dp">
            </TextView>



        </LinearLayout>



    </ScrollView>



</LinearLayout>