                android:layout_height="wrap_content"
                android:text="@string/farmer_name"
                android:fontFamily="@font/poppins_medium">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
