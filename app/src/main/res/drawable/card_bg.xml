<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="20dp"/> <!-- Curved edges -->
        </shape>
    </item>

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Shadow color -->
            <corners android:radius="10dp"/> <!-- Curved edges -->
        </shape>
    </item>
</layer-list>